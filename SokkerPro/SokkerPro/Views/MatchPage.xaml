                                        HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Label
                                        Grid.Column="5"
                                        Text="{Binding overall_league_PTS}"
                                        HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                                        HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Grid>
