                    <StackLayout
                    Grid.Column="1" Grid.Row="1">
                        <Label Text="Get More Corner" FontSize="10" HorizontalTextAlignment="Start"/>
                        <Frame CornerRadius="10" BackgroundColor="#33CB66" HeightRequest="60" Padding="5, 5, 5, 5">
